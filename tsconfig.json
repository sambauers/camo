{
  "include": [
    "bin/index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__fixtures__/*",
    "**/__tests__/*"
  ],
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    
    "module": "es2022",
    "outDir": "./dist",
    "removeComments": true
  },
  "ts-node": {
    "esm": true
  }
}
